{
  "extends": "@tsconfig/recommended/tsconfig.json",
  "compilerOptions": {
    "outDir": "./build/",
    "noImplicitAny": true,
    "module": "es2022",
    "target": "es2023",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["es2023", "dom", "dom.iterable"]
  },
  "include": ["./src/**/*"]
}
